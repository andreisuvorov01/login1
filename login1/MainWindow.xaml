<Window x:Class="login1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,50" Height="30" Width="100" FontWeight="Bold" FontSize="20" />
        <TextBox Text="введите свой логин" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="100,50" Height="40" Width="200" BorderBrush="AliceBlue"/>
        <TextBlock Text="password" HorizontalAlignment="Left" VerticalAlignment="Center" Height="30" Width="100" Margin=" 60" FontWeight="Bold" FontSize="20"/>
        <PasswordBox HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="100" Margin="100"/>
        <Button Content="выход" Height="100" Width="200" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Margin="70,30"/>
        <Button Content="авторизация" Height="100" Width="200" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="70,30"/>
    </Grid>
</Window>
